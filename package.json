{
  "name": "reducer-tester",
  "version": "1.0.1",
  "description": "reducer tester",
  "license": "MIT",
  "repository": "akameco/reducer-tester",
  "author": "akameco <akameco.t@gmail.com> (akameco.github.io)",
  "engines": {
    "node": ">=6"
  },
  "scripts": {
    "add-contributor": "all-contributors add",
    "fmt": "prettier --write '**/*.{js,json,md}'",
    "build": "babel src -d dest --ignore *.test.js",
    "prepare": "yarn build",
    "flow": "flow",
    "lint": "eslint .",
    "test": "jest",
    "test:cov": "jest --coverage --ci --runInBand",
    "test:ci": "yarn flow && yarn lint && yarn test:cov"
  },
  "lint-staged": {
    "*.{js,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "files": [
    "dest",
    "types/index.d.ts"
  ],
  "main": "dest",
  "types": "types/index.d.ts",
  "keywords": [
    "test",
    "jest",
    "redux",
    "react",
    "snapshot",
    "diff",
    "reducer",
    "test"
  ],
  "dependencies": {
    "invariant": "^2.2.4",
    "snapshot-diff": "^0.5.0"
  },
  "devDependencies": {
    "@babel/cli": "7.2.3",
    "@babel/core": "7.2.2",
    "all-contributors-cli": "6.1.1",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "24.1.0",
    "babel-preset-zero": "0.7.0",
    "eslint": "5.13.0",
    "eslint-config-precure": "4.3.3",
    "flow-bin": "0.92.1",
    "husky": "1.3.1",
    "jest": "24.1.0",
    "lint-staged": "8.1.3",
    "prettier": "1.16.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn flow && lint-staged"
    }
  },
  "jest": {
    "modulePathIgnorePatterns": [
      "dest",
      "types"
    ]
  }
}
